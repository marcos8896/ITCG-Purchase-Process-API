    },
    "purchase_order_Requisition": {
      "type": "hasMany",
      "model": "Purchase_order_Requisition",
      "foreignKey": "requisitionId"
    },
    "budget_key": {
      "type": "belongsTo",
      "model": "Budget_key",
      "foreignKey": ""
    }
  },
