      "type": "number",
      "required": false
    },
    "date": {
      "type": "date",
      "required": true
    },
    "action": {
      "type": "string",
      "required": true
    },
    "acceptance_date": {
      "type": "date",
      "required": false
    },
    "check_boss": {
      "type": "string",
      "default": "Aceptado"
    },
    "check_planning": {
      "type": "string",      
      "default": "Esperando"
